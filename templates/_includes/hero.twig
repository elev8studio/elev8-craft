<div class="relative w-full">
    {% if block['background'] and block.background.one() %}
        {% set background = block.background.one().getUrl() %}
        <div class="relative h-screen-40 overflow-hidden flex-grow bg-no-repeat bg-cover md:bg-top inset-0 max-w-screen-xl"
            style="background-image: url({{ background }})"></div>
    {% endif %}

    <h2 class="relative w-full text-center text-white bg-highlight px-8 pt-8 pb-10 bottom-0">
        {{ block.subheading }}
    </h2>
</div>
