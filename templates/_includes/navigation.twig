{% import "_includes/macros" as macros %}

{% set navigation = craft.app.globals.getSetByHandle('navigation').menu.all() %}

<nav class="navigation">

    <div class="navigation-top">
        <div class="burger-container">
            <div id="burger">
                <div class="bar topBar"></div>
                <div class="bar btmBar"></div>
            </div>
        </div>

        {% set logo = craft.assets().filename('logo-white.png').one() %}
        <img class="logo logo-mobile" src="{{ logo.getUrl() }}" alt="">
    </div>


    <ul class="menu">
        {% for block in navigation %}
            <li class="menu-item">
                {% set slug = block.navLink.getUrl()|substringAfterLast('/') %}
                <a {{ block.navLink.getLinkAttributes() }} class="{{ macros.is_active(slug) }}">
                    {{ block.navLink.getText() }}
                </a>
            </li>
        {% endfor %}
    </ul>

</nav>