{% if entry['blocks'] is defined %}
    {% set blocks = entry.blocks.level(1) %}

    {% if blocks|length %}
        {% for block in blocks.all() %}
            {% set sectionClass = block.type.handle|kebab %}
            {% set sectionId = entry.type.handle ~ '-' ~ block.type.handle|kebab ~ '-' ~ loop.index %}
            <section class="relative flex justify-center {{ sectionClass }}"
                     id="{{ sectionId }}">
                {% include '_includes/' ~ (block.type.handle|kebab) %}
            </section>
        {% endfor %}
    {% endif %}
{% endif %}
