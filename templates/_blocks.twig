{% if entry['blocks'] is defined %}
    {% set blocks = entry.blocks.level(1) %}

    {% if blocks|length %}
        {% for block in blocks.all() %}
            <section class="relative flex justify-center {{ block.type.handle|kebab }}"
                id="{{ entry.type.handle }}-{{ block.type.handle|kebab }}">
                {% include '_includes/' ~ (block.type.handle|kebab) %}
            </section>
        {% endfor %}
    {% endif %}
{% endif %}
